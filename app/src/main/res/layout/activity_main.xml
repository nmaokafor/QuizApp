        <CheckBox
            android:id="@+id/number8_option2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number8_option2" />

        <CheckBox
            android:id="@+id/number8_option3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number8_option3" />

        <CheckBox
            android:id="@+id/number8_option4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number8_option4" />


        <TextView
            android:id="@+id/number9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@color/colorPrimaryDark"
            android:padding="8dp"
            android:text="@string/number9"
            android:textColor="@color/colorText1"
            android:textSize="18sp" />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/number9_option1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/number9_option1" />

            <RadioButton
                android:id="@+id/number9_option2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/number9_option2" />

        </RadioGroup>

        <TextView
            android:id="@+id/number10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@color/colorPrimary"
            android:padding="8dp"
            android:text="@string/number10"
            android:textColor="@color/colorText1"
            android:textSize="18sp" />


        <CheckBox
            android:id="@+id/number10_option1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number10_option1" />

        <CheckBox
            android:id="@+id/number10_option2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number10_option2" />

        <CheckBox
            android:id="@+id/number10_option3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number10_option3" />


        <Button
            android:id="@+id/submit_answers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="32dp"
            android:background="@color/colorPrimaryDark"
            android:onClick="submitAnswers"
            android:padding="8dp"
            android:text="@string/submit_answers"
            android:textColor="@color/colorText1" />
    </LinearLayout>
</ScrollView>